<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <ImageView
            android:id="@+id/ivwanfeifei"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/btsingle" />

        <TextView
            android:id="@+id/tvwanfeifei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="@string/game1"
            android:textColor="#000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivwanxiaoniao"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivwanfeifei"
            android:layout_marginTop="10dp"
            android:background="@drawable/btsingle" />

        <TextView
            android:id="@+id/tvwanxiaoniao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivwanxiaoniao"
            android:layout_centerHorizontal="true"
            android:paddingBottom="4dp"
            android:text="@string/game2"
            android:textColor="#000"
            android:textSize="24sp" />
        <ImageView
            android:id="@+id/ivqiexianfangcheng"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivwanxiaoniao"
            android:layout_marginTop="10dp"
            android:background="@drawable/btsingle" />

        <TextView
            android:id="@+id/tvqiexianfangcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivqiexianfangcheng"
            android:layout_centerHorizontal="true"
            android:paddingBottom="4dp"
            android:text="@string/qiexianfangcheng"
            android:textColor="#000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivmore"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ivqiexianfangcheng"
            android:layout_marginTop="10dp"
            android:background="@drawable/btsingle" />

        <TextView
            android:id="@+id/tvmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivmore"
            android:layout_centerHorizontal="true"
            android:paddingBottom="4dp"
            android:text="@string/more"
            android:textColor="#000"
            android:textSize="24sp" />


    </RelativeLayout>
</RelativeLayout>